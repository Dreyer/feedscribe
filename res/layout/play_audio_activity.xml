
    <RelativeLayout android:id="@+id/play_audio_layout" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout android:layout_alignParentBottom="true" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical">
            <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/linearLayout2">
                <TextView android:layout_height="wrap_content" android:id="@+id/position_text" android:layout_width="30sp" android:text="" android:layout_weight="1" android:layout_gravity="bottom" android:gravity="bottom|left" android:textColor="@android:color/black" />
                <ImageButton android:layout_height="50dp" android:layout_width="70dp" android:src="@android:drawable/ic_media_rew" android:layout_weight="0" android:id="@+id/btn_rew" android:contentDescription="@string/btn_rewind"></ImageButton>
                <ImageButton android:layout_height="50dp" android:layout_width="70dp" android:src="@android:drawable/ic_media_pause" android:layout_weight="0" android:id="@+id/btn_pause" android:contentDescription="@string/btn_pause"></ImageButton>
                <ImageButton android:layout_height="50dp" android:layout_width="70dp" android:src="@android:drawable/ic_media_ff" android:layout_weight="0" android:id="@+id/btn_ff" android:contentDescription="@string/btn_fast_forward"></ImageButton>
                <TextView android:layout_weight="1" android:layout_height="wrap_content" android:id="@+id/duration_text" android:layout_gravity="bottom" android:layout_width="30dp" android:text="" android:gravity="bottom|right" android:textColor="@android:color/black" />
            </LinearLayout>
            <SeekBar android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/seekBar1"></SeekBar>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearLayout3" android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="horizontal">
            <ImageView android:id="@+id/imageView1" android:layout_width="100dip" android:layout_height="100dip" android:layout_margin="10dip" android:contentDescription="@string/img_thumbnail"></ImageView>
            <TextView android:layout_height="wrap_content" android:layout_margin="10dip" android:layout_width="wrap_content" android:id="@+id/titleTextView" android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
        <WebView android:layout_width="fill_parent" android:id="@+id/web_view" android:layout_height="wrap_content" android:layout_below="@+id/linearLayout3" android:layout_above="@+id/linearLayout1" />
    </RelativeLayout>
